alias rm="rm -iv"
alias cat="bat"
alias lsag="lsa | grep -i"
alias tree="tree --gitignore"
alias jcal="jcal -e"
alias alsg="alias | grep -i"
alias cpc="xclip -sel clip <"
alias wts="watson"
alias wtss="watson status"
alias wtsa="watson aggregate -G"
alias wtsr="watson report"
